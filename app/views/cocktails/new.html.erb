<h1>New cocktail</h1>
<%= simple_form_for(@cocktail) do |f| %>
  <% if @cocktail.errors.any? %>
    <div class="errors-container">

        <% @cocktail.errors.full_messages %>

    </div>
  <% end %>
  <%= f.input :name %>
  <%= f.input :url %>
  <%= f.submit "add this cocktail", class: "btn btn-primary" %>
<% end %>

<%= link_to "Back to list", cocktails_path %>
