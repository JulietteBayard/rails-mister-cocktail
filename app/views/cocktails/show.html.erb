<h1><%= @cocktail.name %></h1>
<ul>
  <% @cocktail.doses.each do |dose| %>
    <li><%= dose.description %> de <%= dose.ingredient.name %></li>
  <%= link_to "Delete this dose", dose_path(dose), method: :delete %>
  <% end %>
</ul>

<%= link_to "Back to list", cocktails_path %>
<%= link_to "Add new dose", new_cocktail_dose_path(@cocktail) %>
